/ {
	pwmleds {
		compatible = "pwm-leds";
		led_battery_red: pwm_led_1 {
			pwms = <&pwm0 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
		};
		led_battery_green: pwm_led_2 {
			pwms = <&pwm1 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
		};
		led_suspend_white: pwm_led_3 {
			pwms = <&pwm2 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
		};
	};

	pwm-led-pins {
		compatible = "cros-ec,pwm-led-pins";

		battery_led: battery-led {
			led-id = "EC_LED_ID_BATTERY_LED";
			led-pwms = <&led_battery_red
				    &led_battery_green>;

			color-battery-off {
				led-color = "LED_OFF";
				led-values = <0 0>;
			};

			color-battery-red {
				led-color = "LED_RED";
				led-values = <100 0>;
			};

			color-battery-green {
				led-color = "LED_GREEN";
				led-values = <0 100>;
			};

			color-battery-amber {
				led-color = "LED_AMBER";
				led-values = <70 50>;
			};
		};

		power_led: power-led {
			led-id = "EC_LED_ID_POWER_LED";
			led-pwms = <&led_suspend_white>;

			color-power-off {
				led-color = "LED_OFF";
				led-values = <0>;
			};

			color-power-white {
				led-color = "LED_WHITE";
				led-values = <100>;
			};
		};
	};
};

/* Red LED */
&pwm0 {
	status = "okay";
	clock-bus = "NPCX_CLOCK_BUS_LFCLK";
	pinctrl-0 = <&pwm0_gpc3>;
	pinctrl-names = "default";
};

/* green LED */
&pwm1 {
	status = "okay";
	clock-bus = "NPCX_CLOCK_BUS_LFCLK";
	pinctrl-0 = <&pwm1_gpc2>;
	pinctrl-names = "default";
};

/* white LED */
&pwm2 {
	status = "okay";
	clock-bus = "NPCX_CLOCK_BUS_LFCLK";
	pinctrl-0 = <&pwm2_gpc4>;
	pinctrl-names = "default";
};

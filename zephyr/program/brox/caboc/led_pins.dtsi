 / {
	pwmleds {
		compatible = "pwm-leds";

		pwm_power_led_white: power_led_l {
			pwms = <&pwm2 PWM_CHANNEL_2 PWM_HZ(324)
				PWM_POLARITY_INVERTED>;
		};
		pwm_battery_led_white: charge_led_white_l {
			pwms = <&pwm4 PWM_CHANNEL_4 PWM_HZ(324)
				PWM_POLARITY_INVERTED>;
		};
		pwm_battery_led_amber: charge_led_amber_l {
			pwms = <&pwm5 PWM_CHANNEL_5 PWM_HZ(324)
				PWM_POLARITY_INVERTED>;
		};
	};

	pwm-led-pins {
		compatible = "cros-ec,pwm-led-pins";

		battery_led: combo-battery-led {
			led-id = "EC_LED_ID_BATTERY_LED";
			led-pwms = <&pwm_battery_led_white
				    &pwm_battery_led_amber>;

			color-battery-off {
				led-color = "LED_OFF";
				led-values = <0 0>;
			};

			color-battery-white {
				led-color = "LED_WHITE";
				led-values = <100 0>;
			};

			color-battery-amber {
				led-color = "LED_AMBER";
				led-values = <0 100>;
			};
		};

		power_led: combo-power-led {
			led-id = "EC_LED_ID_POWER_LED";
			led-pwms = <&pwm_power_led_white>;

			color-battery-off {
				led-color = "LED_OFF";
				led-values = <0>;
			};

			color-battery-white {
				led-color = "LED_WHITE";
				led-values = <100>;
			};
		};
	};
};

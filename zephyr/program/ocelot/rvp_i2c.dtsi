/ {
	named-i2c-ports {
		compatible = "named-i2c-ports";

		i2c_named_i2c_port_pd1: named_i2c_port_pd_aic1 {
			i2c-port = <&i2c_port_pd1>;
			enum-names = "I2C_PORT_PD";
		};
		i2c_named_i2c_port_pd2: named_i2c_port_pd_aic2 {
			i2c-port = <&i2c_port_pd2>;
			enum-names = "I2C_PORT_PD_SPARE";
		};
		i2c_named_i2c_port_charger: named_i2c_port_charger {
			i2c-port = <&i2c_port_charger>;
			enum-names = "I2C_PORT_BATTERY",
				"I2C_PORT_CHARGER",
				"I2C_PORT_PORT80";
		};
		i2c_named_i2c_port_ish: named_i2c_port_ish {
			i2c-port = <&i2c_port_ish>;
			enum-names = "I2C_PORT_ISH";
		};
	};
};

&i2c_port_pd1 {
	label = "I2C_PORT_PD";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&i2c_port_pd2 {
	/* Port not used. All PDCs on bus i2c_port_pd1 */
	label = "I2C_PORT_PD_SPARE";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&i2c_port_charger {
	label = "I2C_PORT_CHARGER";
	clock-frequency = <I2C_BITRATE_STANDARD>;

	charger: raa489@9 {
		compatible = "intersil,isl9241";
		status = "okay";
		reg = <0x9>;
	};
	pca95xx_0: pca95xx@22 {
		compatible = "nxp,pca95xx";
		label = "PCA95XX_0";
		reg = <0x22>;
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <16>;
		/* b/392207109: This chip is not powered when the EC boots */
		zephyr,deferred-init;
	};
	pca95xx_1: pca95xx@23 {
		compatible = "nxp,pca95xx";
		label = "PCA95XX_1";
		reg = <0x23>;
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <16>;
	};
	rvp_board_id: rvp-board-id {
		compatible = "intel,rvp-board-id";
		defer-until-s5 = <&pca95xx_0>;
		bom-gpios = <&pca95xx_0 14 0>, <&pca95xx_0 15 0>,
			    <&pca95xx_0 0 0>;

		fab-gpios = <&pca95xx_0 1 0>, <&pca95xx_0 2 0>;

		board-gpios = <&pca95xx_0 8 0>, <&pca95xx_0 9 0>,
			      <&pca95xx_0 10 0>, <&pca95xx_0 11 0>,
			      <&pca95xx_0 12 0>, <&pca95xx_0 13 0>;
	};
	seven_seg_display: max695x-seven-seg-display@38 {
		compatible = "maxim,max695x";
		reg = <0x38>;
		label = "MAX695X_SEVEN_SEG_DISPLAY";
	};
	/* This is the IOEX IC present on GCS AIC */
	it8801_mfd: it8801@39 {
		compatible = "ite,it8801-mfd";
		reg = <0x39>;
	};
};

&i2c_port_ish {
	label = "I2C_PORT_ISH";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

/ {
	named-i2c-ports {
		compatible = "named-i2c-ports";

		i2c_named_i2c_port_pd1: named_i2c_port_pd_aic1 {
			i2c-port = <&i2c_port_pd1>;
			enum-names = "I2C_PORT_PD";
		};
		i2c_named_i2c_port_charger: named_i2c_port_charger {
			i2c-port = <&i2c_port_charger>;
			enum-names = "I2C_PORT_BATTERY",
				"I2C_PORT_CHARGER",
				"I2C_PORT_PORT80";
		};
		i2c_named_i2c_port_ish: named_i2c_port_ish {
			i2c-port = <&i2c_port_ish>;
			enum-names = "I2C_PORT_ISH";
		};
	};
};

&i2c_port_pd1 {
	label = "I2C_PORT_PD";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&i2c_port_charger {
	label = "I2C_PORT_CHARGER";
	clock-frequency = <I2C_BITRATE_STANDARD>;

	charger: raa489@9 {
		compatible = "intersil,isl9241";
		status = "okay";
		reg = <0x9>;
	};
};

&i2c_port_ish {
	label = "I2C_PORT_ISH";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&i2c1 {
	status = "okay";
	pinctrl-0 = <&i2c1_clk_gpc1_default
		&i2c1_data_gpc2_default>;
	pinctrl-names = "default";
};

&i2c4 {
	status = "okay";
	pinctrl-0 = <&i2c4_clk_gpe0_default
		&i2c4_data_gpe7_default>;
	pinctrl-names = "default";
};

&i2c5 {
	status = "okay";
	pinctrl-0 = <&i2c5_clk_gpe1_default
		&i2c5_data_gpe2_default>;
	pinctrl-names = "default";
};
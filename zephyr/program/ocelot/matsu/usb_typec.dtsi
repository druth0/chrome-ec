#include <usbc-policy.dtsi>

 /{
	usbc {
		#address-cells = <1>;
		#size-cells = <0>;
		usbc_port0: port0@0 {
			compatible = "named-usbc-port";
			reg = <0>;
			chg = <&charger>;
			pdc = <&pdc_rtk_c0>;
			pd-retimer;
			policy = <&cros_policy>;
		};
		usbc_port1: port1@1 {
			compatible = "named-usbc-port";
			reg = <1>;
			pdc = <&pdc_rtk_c1>;
			pd-retimer;
			policy = <&cros_policy>;
		};
		ppm-driver {
			compatible = "ucsi-ppm";
		};
	};
};

&i2c_port_pd1 {
	/* Define PDC IRQ GPIO(s) in board overlay */
	pdc_rtk_c0: rts54-pdc@66 {
		compatible = "realtek,rts54-pdc";
		reg = <0x66>;
		irq-gpios = <&gpiof 5 GPIO_ACTIVE_LOW>;
		ccd;
	};
	pdc_rtk_c1: rts54-pdc@67 {
		compatible = "realtek,rts54-pdc";
		reg = <0x67>;
		irq-gpios = <&gpiof 5 GPIO_ACTIVE_LOW>;
	};
};

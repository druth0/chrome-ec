#include <usbc-policy.dtsi>

 /{
	usbc {
		#address-cells = <1>;
		#size-cells = <0>;
		usbc_port0: port0@0 {
			compatible = "named-usbc-port";
			reg = <0>;
			chg = <&charger>;
			pdc = <&pdc_rtk_c0 &pdc_ti_c0>;
			pd-retimer;
			policy = <&cros_policy>;
		};
		usbc_port1: port1@1 {
			compatible = "named-usbc-port";
			reg = <1>;
			pdc = <&pdc_rtk_c1 &pdc_ti_c1>;
			pd-retimer;
			policy = <&cros_policy>;
		};
		ppm-driver {
			compatible = "ucsi-ppm";
		};
	};
};

&i2c_port_pd1 {
	/* Define PDC IRQ GPIO(s) in board overlay */
	pdc_rtk_c0: rts54-pdc@66 {
		compatible = "realtek,rts54-pdc";
		reg = <0x66>;
		ccd;
		zephyr,deferred-init;
	};
	pdc_rtk_c1: rts54-pdc@67 {
		compatible = "realtek,rts54-pdc";
		reg = <0x67>;
		zephyr,deferred-init;
	};
	pdc_ti_c0: rts54-pdc@20 {
		compatible = "ti,tps6699-pdc";
		reg = <0x20>;
		ccd;
		zephyr,deferred-init;
	};
	pdc_ti_c1: rts54-pdc@24 {
		compatible = "ti,tps6699-pdc";
		reg = <0x24>;
		zephyr,deferred-init;
	};
};

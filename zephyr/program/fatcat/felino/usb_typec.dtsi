#include <usbc-policy.dtsi>

/ {
	usbc {
		#address-cells = <1>;
		#size-cells = <0>;

		usbc_port0: port0@0 {
			compatible = "named-usbc-port";
			reg = <0>;
			chg = <&charger>;
			pdc = <&pdc_power_p0>;
			pd-retimer;
			policy = <&cros_policy>;
		};
		usbc_port1: port1@1 {
			compatible = "named-usbc-port";
			reg = <1>;
			pdc = <&pdc_power_p1>;
			pd-retimer;
			policy = <&cros_policy>;
		};
		ppm-driver {
			compatible = "ucsi-ppm";
		};
	};
};

&i2c1 {
	pdc_power_p0: tps6699-pdc@21 {
		compatible = "ti,tps6699-pdc";
		reg = <0x21>;
		irq-gpios = <&gpiof 5 GPIO_ACTIVE_LOW>;
	};
	pdc_power_p1: tps6699-pdc@25 {
		compatible = "ti,tps6699-pdc";
		reg = <0x25>;
		irq-gpios = <&gpiof 5 GPIO_ACTIVE_LOW>;
		no-fw-update;
	};
};

&i2c4 {
	charger: bq25710@9 {
		compatible = "ti,bq25710";
		status = "okay";
		reg = <0x9>;
	};
};

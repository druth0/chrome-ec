/ {
	gpio-led-pins {
		compatible = "cros-ec,gpio-led-pins";

		battery_led: battery-led {
			led-id = "EC_LED_ID_BATTERY_LED";
			led-pins = <&gpio_led_amber &gpio_led_white>;

			color_off: color-off {
				led-color = "LED_OFF";
				led-values = <0 0>;
			};

			color_amber: color-amber {
				led-color = "LED_AMBER";
				led-values = <1 0>;
			};

			color_white: color-white {
				led-color = "LED_WHITE";
				led-values = <0 1>;
			};
		};
	};
};

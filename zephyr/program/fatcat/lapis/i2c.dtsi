/ {
	named-i2c-ports {
		compatible = "named-i2c-ports";

		/* P_SMB1_CLK_50OHM, P_SMB1_DATA_50OHM */
		i2c_smb1_bat: smb1_bat {
			i2c-port = <&i2c_1>;
			enum-names = "I2C_PORT_BATTERY";
		};
		/* SMB2_CLK, SMB2_DAT */
		i2c_smb2_pd: smb2_pd {
			i2c-port = <&i2c_2>;
			enum-names = "I2C_PORT_PD";
		};
	};
};

&i2c_1 {
	pinctrl-0 = <&i2c01_clk_gpio118
		     &i2c01_data_gpio119>;
	pinctrl-names = "default";

	label = "I2C_PORT_CHARGER";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
};

&i2c_1_wrapper {
	label = "I2C_BATTERY";
	label = "I2C_PORT_CHARGER";
	status = "okay";
	scl-gpios = <&gpioh 6 GPIO_ACTIVE_HIGH>;
	sda-gpios = <&gpioh 7 GPIO_ACTIVE_HIGH>;
};

&i2c_2 {
	pinctrl-0 = <&i2c02_clk_gpio014
		     &i2c02_data_gpio121>;
	pinctrl-names = "default";

	label = "I2C_PORT_PD";
	clock-frequency = <I2C_BITRATE_FAST>;
	status = "okay";
};

&i2c_2_wrapper {
	label = "I2C_PORT_PD";
	status = "okay";
	scl-gpios = <&gpioa 14 GPIO_ACTIVE_HIGH>;
	sda-gpios = <&gpioh 9 GPIO_ACTIVE_HIGH>;
};

#include <cros/binman.dtsi>

&binman {
	wp-ro {
		ec-ro {
			key-ro {
				compatible = "cros-ec,flash-layout";
				type = "section";
				offset = <0x1fc00>;
				size = <0x400>;
			};
		};
	};

	ec-rw {
		rw-fw {
			rw-rbver {
				size = <4>;
				type = "section";
				/* points to
				 * current_image_data.rollback_version
				 */
				offset-from-elf = <&zephyr_rw>,
					"current_image_data", <40>;
				overlap;
			};
			sig-rw {
				type = "section";
				offset = <0x3fc00>;
				size = <0x400>;
			};
			pad-byte = <0xff>;
		};
	};
};
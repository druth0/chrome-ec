 / {
	pwm-leds {
		compatible = "pwm-leds";
		pwm_a: pwm_a {
			pwms = <&pwm0 0 PWM_HZ(324) PWM_POLARITY_INVERTED>;
		};
		pwm_b: pwm_b {
			pwms = <&pwm1 0 PWM_HZ(324) PWM_POLARITY_INVERTED>;
		};
		pwm_c: pwm_c {
			pwms = <&pwm2 0 PWM_HZ(324) PWM_POLARITY_INVERTED>;
		};
	};

	pwm-led-pins {
		compatible = "cros-ec,pwm-led-pins";

		battery_led: battery-led {
			led-id = "EC_LED_ID_BATTERY_LED";
			led-pwms = <&pwm_a &pwm_b>;

			color_off: color-off {
				led-color = "LED_OFF";
				led-values = <0 0>;
			};

			color_amber: color-amber {
				led-color = "LED_AMBER";
				led-values = <50 70>;
			};

			color_red: color-red {
				led-color = "LED_RED";
				led-values = <0 100>;
			};

			color_green: color-green {
				led-color = "LED_GREEN";
				led-values = <100 0>;
			};
		};
		power_led: power-led {
			led-id = "EC_LED_ID_POWER_LED";
			led-pwms = <&pwm_c>;

			color_power_off: color-off {
				led-color = "LED_OFF";
				led-values = <0>;
			};

			color_power_white: color-white {
				led-color = "LED_WHITE";
				led-values = <100>;
			};
		};
	};
};

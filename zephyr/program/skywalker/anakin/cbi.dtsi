/ {
	anakin-fw-config {
		compatible = "cros-ec,cbi-fw-config";

		/*
		 * FW_CONFIG field to indicate the device is clamshell
		 * or convertible.
		 */
		form_factor {
			enum-name = "FORM_FACTOR";
			start = <28>;
			size = <2>;
			convertible {
				compatible = "cros-ec,cbi-fw-config-value";
				enum-name = "CONVERTIBLE";
				value = <0>;
			};
			clamshell {
				compatible = "cros-ec,cbi-fw-config-value";
				enum-name = "CLAMSHELL";
				value = <1>;
			};
		};
		usbc-ports {
			enum-name = "USBC_PORTS";
			start = <8>;
			size = <2>;

			two-ports {
				compatible = "cros-ec,cbi-fw-config-value";
				enum-name = "TWO_PORTS";
				value = <0>;
			};
			one-port {
				compatible = "cros-ec,cbi-fw-config-value";
				enum-name = "ONE_PORT";
				value = <1>;
			};
		};
	};

	anakin-ssfc {
		compatible = "cros-ec,cbi-ssfc";
		/* SSFC field to identify BASE motion sensor. */
		base-sensor {
			enum-name = "BASE_SENSOR";
			size = <3>;
			base_sensor_0: bmi323 {
				compatible = "cros-ec,cbi-ssfc-value";
				status = "okay";
				value = <1>;
				default;
			};
			base_sensor_1: lsm6dsm {
				compatible = "cros-ec,cbi-ssfc-value";
				status = "okay";
				value = <2>;
				};
		};

		/* SSFC field to identify LID motion sensor. */
		id-sensor {
			enum-name = "LID_SENSOR";
			size = <3>;
			lid_sensor_0: bma422 {
				compatible = "cros-ec,cbi-ssfc-value";
				status = "okay";
				value = <1>;
				default;
			};
			lid_sensor_1: lis2dw12 {
				compatible = "cros-ec,cbi-ssfc-value";
				status = "okay";
				value = <2>;
			};
		};
	};
};

 / {
	pwm-leds {
		compatible = "pwm-leds";
		led_red: led-red {
			pwms = <&pwm0 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
		};
		led_green: led-green {
			pwms = <&pwm1 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
		};
		led_white: led-white {
			pwms = <&pwm2 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
		};
	};

	pwm-led-pins {
		compatible = "cros-ec,pwm-led-pins";

		battery_led: battery-led {
			led-id = "EC_LED_ID_BATTERY_LED";
			led-pwms = <&led_red &led_green>;
			color_off: color-off {
				led-color = "LED_OFF";
				led-values = <0 0>;
			};

			color_red: color-red {
				led-color = "LED_RED";
				led-values = <100 0>;
			};

			color_green: color-green {
				led-color = "LED_GREEN";
				led-values = <0 100>;
			};

			color_amber: color-amber {
				led-color = "LED_AMBER";
				led-values = <70 50>;
			};
		};

		power_led: power-led {
			led-id = "EC_LED_ID_POWER_LED";
			led-pwms = <&led_white>;

			color_power_off: color-power-off {
				led-color = "LED_OFF";
				led-values = <0>;
			};

			color_power_white: color-power-white {
				led-color = "LED_WHITE";
				led-values = <100>;
			};
		};
	};
};

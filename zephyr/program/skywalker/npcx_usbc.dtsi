#include <usbc-policy.dtsi>

/ {
	usbc {
		#address-cells = <1>;
		#size-cells = <0>;

		usbc_port0: port0@0 {
			compatible = "named-usbc-port";
			reg = <0>;
			chg = <&charger_bq25720>;
			pdc = <&pdc_power_p0>;
			policy = <&cros_policy>;
			usb-mux-chain-0 {
				compatible = "cros-ec,usb-mux-chain";
				usb-muxes = <&tusb546_mux_0 &virtual_mux_0>;
			};
		};

		port0-muxes {
			virtual_mux_0: virtual-mux-0 {
				compatible = "cros-ec,usbc-mux-virtual";
			};
		};

		usbc_port1: port0@1 {
			compatible = "named-usbc-port";
			reg = <1>;
			pdc = <&pdc_power_p1>;
			policy = <&cros_policy>;
			usb-mux-chain-1 {
				compatible = "cros-ec,usb-mux-chain";
				usb-muxes = <&ps8747_mux_1 &virtual_mux_1>;
			};
		};

		port1-muxes {
			virtual_mux_1: virtual-mux-1 {
				compatible = "cros-ec,usbc-mux-virtual";
			};
		};
		ppm-driver {
			compatible = "ucsi-ppm";
			lpm = <&pdc_power_p0 &pdc_power_p1>;
		};
	};
};

&i2c1_0 {
	pdc_power_p0: rts54-pdc@66 {
		compatible = "realtek,rts54-pdc";
		reg = <0x66>;
		irq-gpios = <&gpioe 1 GPIO_ACTIVE_LOW>;
	};
	pdc_power_p1: rts54-pdc@67 {
		compatible = "realtek,rts54-pdc";
		reg = <0x67>;
		irq-gpios = <&gpio6 2 GPIO_ACTIVE_LOW>;
	};
	/* TODO(b:380121396): enable PDC I2C_S port if we need it */
};

&i2c2_0 {
	ps8747_mux_1: ps8747-mux-1@10 {
		compatible = "parade,ps8743";
		status = "okay";
		reg = <0x10>;
	};

	tusb546_mux_0: tusb546-mux-0@44 {
		compatible = "ti,tusb546";
		reg = <0x44>;
	};
};

&i2c3_0 {
	charger_bq25720: bq25720@9 {
		compatible = "ti,bq25710";
		status = "okay";
		reg = <0x9>;
	};
};

